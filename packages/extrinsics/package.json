{
  "name": "@chainflip/extrinsics",
  "version": "1.6.2",
  "type": "module",
  "scripts": {
    "eslint:check": "pnpm eslint --max-warnings 0 './**/*.ts'",
    "prettier:base": "prettier ./** --ignore-path=../../.prettierignore",
    "prettier:check": "pnpm prettier:base --check",
    "prettier:write": "pnpm prettier:base --write",
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm tsdown",
    "prepublish": "pnpm test run && pnpm build",
    "test:ci": "CI=1 pnpm t run",
    "test": "vitest"
  },
  "devDependencies": {
    "@chainflip/utils": "0.8.18",
    "@polkadot/types": "^16.5.4"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./*": {
      "require": {
        "types": "./dist/*.d.cts",
        "default": "./dist/*.cjs"
      },
      "import": {
        "types": "./dist/*.d.mts",
        "default": "./dist/*.mjs"
      }
    },
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "repository": "https://github.com/chainflip-io/chainflip-product-toolkit.git",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
