    "test": "vitest"
  },
  "repository": "https://github.com/chainflip-io/chainflip-product-toolkit.git",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "dependencies": {
    "@chainflip/utils": "^0.4.0",
    "@noble/hashes": "^1.4.0"
  }
}
