{
  "name": "@chainflip/bitcoin",
  "version": "0.2.2",
  "type": "module",
  "scripts": {
    "wasm-pack": "wasm-pack build --release --target nodejs --out-dir 'wasm/built' --no-pack",
    "prepublish": "pnpm build && pnpm test run",
    "clean": "rm -rf wasm/built dist",
    "tsup:build": "tsup --config tsup.config.mts",
